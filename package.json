{
  "name": "httpcraft-mcp",
  "version": "0.1.0",
  "description": "Model Context Protocol server for HTTPCraft CLI integration",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "httpcraft-mcp": "dist/server.js"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/server.js",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist coverage .nyc_output"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "httpcraft",
    "api-testing",
    "http-client",
    "ai-agent"
  ],
  "author": "HTTPCraft MCP Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/samjwillis97/httpcraft-mcp.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "which": "5.0.0",
    "yaml": "2.8.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/js-yaml": "4.0.9",
    "@types/node": "^20.0.0",
    "@types/which": "3.0.4",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ]
}
